@page "/consultaSuplidor"

<PageTitle>Consulta Suplidor</PageTitle>

@inject SuplidorBLL suplidorBLL

<EditForm Model="lista">
    <div class="card">
        <div class="card-header">
            <h1>Consulta de Suplidores</h1>
        </div>
    
    <div class="card-body">
        <div  class="row">
            <div class="col-3">
                <label class="form-label">Criterio</label>
                <input type="text" class="form-control" @bind="Criterio">
        </div>

        <div class="col-2">
        <label class="form-label">Filtro</label>
            <select class="form-control" @bind="Filtro">
                <option value="1">SuplidorId</option>
                <option value="2">Marca</option>
                <option value="3">PrecioVenta</option>
                <option value="4">Email</option>
                <option value="5">Telefono</option>
                <option value="6">Direccion</option>
                <option value="7">Todos</option>
            </select>
        </div>

        <div class="col-3 d-flex align-items-end">
            <button type="button" class="btn btn-primary input-group-text" @onclick="Buscar">
            <i class="oi oi-magnifying-glass"/>Buscar</button>
        </div>

        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>SuplidorId</th>
                <th>Marca</th>
                <th>PrecioVenta</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Direccion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in lista)
            {
                <tr>
                    <td>@item.SuplidorId</td>
                    <td>@item.Marca</td>
                    <td>@item.PrecioVenta</td>
                    <td>@item.Email</td>
                    <td>@item.Telefono</td>
                    <td>@item.Direccion</td>
                    <td><a href="suplidor/@item.SuplidorId">Ver</a></td>
                </tr>
            }
        </tbody>
    </table>    
</div>
</EditForm>

@code{
    
    public string Filtro {get;set;} = "";
    public string Criterio {get;set;} = "";

    public List<Suplidor> lista {get;set;} = new List<Suplidor>();

        protected override void OnInitialized()
        {
            Buscar();
        }

        public void Buscar()
        {
            if (Filtro == "1")
            {
                lista = suplidorBLL.GetList(o => o.SuplidorId.ToString().Contains(Criterio));
            }
            else if ((Filtro == "2")){
                lista = suplidorBLL.GetList(o => (o.Marca ?? "").Contains(Criterio));
            }
            else if ((Filtro == "3")){
                lista = suplidorBLL.GetList(o => o.PrecioVenta.ToString().Contains(Criterio));
            }
            else if ((Filtro == "4")){
                lista = suplidorBLL.GetList(o => (o.Email ?? "").Contains(Criterio));
            }
            else if ((Filtro == "5")){
                lista = suplidorBLL.GetList(o => (o.Telefono ?? "").Contains(Criterio));
            }
            else if ((Filtro == "6")){
                lista = suplidorBLL.GetList(o => (o.Direccion ?? "").Contains(Criterio));
            }
            else{
                lista = suplidorBLL.GetList(o => true);
            }
        }  
}