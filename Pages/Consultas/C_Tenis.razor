@page "/consultaTenis"

<PageTitle>Consulta Tenis</PageTitle>

@inject TenisBLL tenisBLL
@inject MarcaBLL marcaBLL

<EditForm Model="lista">
    <div class="card">
        <div class="card-header">
            <h1>Consulta de Tenis</h1>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    <label class="form-label">Criterio</label>
                    <input type="text" class="form-control" @bind="Criterio">
                </div>

                <div class="col-2">
                    <label class="form-label">Filtro</label>
                    <select class="form-control" @bind="Filtro">
                        <option value="1">Id</option>
                        <option value="2">Descripción</option>
                        <option value="3">Marca</option>
                        <option value="4">Costo</option>
                        <option value="5">Precio</option>
                        <option value="6">Color</option>
                        <option value="7">Itbis</option>
                        <option value="8">Size</option>
                        <option value="9">Existencia</option>
                        <option value="10">Todos</option>
                    </select>
                </div>

                <div class="col-3 d-flex align-items-end">
                    <button type="button" class="btn btn-primary input-group-text" @onclick="Buscar">
                        <i class="oi oi-magnifying-glass" />Buscar</button>
                </div>

            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripción</th>
                    <th>Marca</th>
                    <th>Costo</th>
                    <th>Precio</th>
                    <th>Color</th>
                    <th>Itbis</th>
                    <th>Size</th>
                    <th>Existencia</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in lista)
                {
                    <tr>
                        <td>@item.TeniId</td>
                        <td>@item.Descripcion</td>
                        <td>@marcaBLL.Buscar(item.MarcaId).NombreMarca</td>
                        <td>@item.Costo</td>
                        <td>@item.Precio</td>
                        <td>@item.Color</td>
                        <td>@item.Itbis</td>
                        <td>@item.Size</td>
                        <td>@item.Existencia</td>
                        <td><a href="tenis/@item.TeniId">Ver</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</EditForm>

@code {

    public string Filtro { get; set; } = "";
    public string Criterio { get; set; } = "";

    public List<Tenis> lista { get; set; } = new List<Tenis>();

    protected override void OnInitialized()
    {
        Buscar();
    }

    public void Buscar()
    {
        if (Filtro == "1")
        {
            lista = tenisBLL.GetList(o => o.TeniId.ToString().Contains(Criterio));
        }
        else if ((Filtro == "2"))
        {
            lista = tenisBLL.GetList(o => o.Descripcion!.ToLower() == Criterio.ToLower());
        }
        else if ((Filtro == "3"))
        {
            lista = tenisBLL.GetList(o => o.MarcaId.ToString().Contains(Criterio));
        }
        else if ((Filtro == "4"))
        {
            lista = tenisBLL.GetList(o => o.Costo.ToString() == Criterio.ToLower());
        }
        else if ((Filtro == "5"))
        {
            lista = tenisBLL.GetList(o => o.Precio.ToString() == Criterio.ToLower());
        }
        else if ((Filtro == "6"))
        {
            lista = tenisBLL.GetList(o => o.Color!.ToLower() == Criterio.ToLower());
        }
        else if ((Filtro == "7"))
        {
            lista = tenisBLL.GetList(o => o.Itbis.ToString() == Criterio.ToLower());
        }
        else if ((Filtro == "8"))
        {
            lista = tenisBLL.GetList(o => o.Size!.ToLower() == Criterio.ToLower());
        }
        else if ((Filtro == "9"))
        {
            lista = tenisBLL.GetList(o => o.Existencia.ToString().Contains(Criterio));
        }
        else
        {
            lista = tenisBLL.GetList(o => true);
        }
    }
}