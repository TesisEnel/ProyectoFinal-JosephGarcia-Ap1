@page "/tennis"
@page "/tennis/{tenniId:int}"

<PageTitle>Registro Tennis</PageTitle>

@inject TennisBLL tennisBLL
@inject NotificationService notificationService

<EditForm Model="tenni" OnValidSubmit="Guardar">
    <DataAnnotationsValidator/>

    <div class="card">
        <div class="card-header">
            <h1> Registo de tennis </h1>
        </div>

        <div class="card-body">
            @*TenniId*@
            <div class="form-group">
                <label>TenniId: </label><br>
                <InputNumber @bind-Value="tenni.TenniId" class="form-control" /> <br>
                <button type="button" class="btn btn-primary input-group-text" @onclick="Buscar"><i
                        class="oi oi-magnifying-glass" /> Buscar</button>
            </div>

            @*Marca*@
            <div class="form-group">
                <label>Marca: </label><br>
                <InputText @bind-Value="tenni.Marca" class="form-control" /> <br>
            </div>

            @*Costo*@
            <div class="form-group">
                <label>Costo: </label><br>
                <InputNumber @bind-Value="tenni.Costo" class="form-control" /> <br>
            </div>

            @*Precio*@
            <div class="form-group">
                <label>Precio: </label><br>
                <InputNumber @bind-Value="tenni.Precio" class="form-control" /> <br>
            </div>

            @*Existencia*@
            <div class="form-group">
                <label>Existencia: </label><br>
                <InputNumber @bind-Value="tenni.Existencia" class="form-control" /> <br>
            </div>
        </div>

        <div class="card-footer">
            <div class="form-group text-center" display: inline-block>
                <button type="button" class="btn btn-lg btn-primary" @onclick="Nuevo"><i class="oi oi-file" /> Nuevo </button>
                <button type="submit" class="btn btn-lg btn-success"><i class="oi oi-document" /> Guardar </button>
                <button type="button" class="btn btn-lg btn-danger" @onclick="Eliminar"><i class="oi oi-trash" /> Eliminar </button>
            </div>
        </div>
    </div>
</EditForm>

@code{

    [Parameter]
    public int tenniId { get; set; }

    public Tennis tenni { get; set; } = new Tennis();

    protected override void OnInitialized()
    {
        if (tenniId > 0)
        {
            this.tenni.TenniId = tenniId;
            this.Buscar();
        }
    }

    public void Nuevo()
    {
        tenni = new Tennis();
    }

    bool Validar()
    {
        if(!String.IsNullOrEmpty(tenni.Marca)){
            return true;
        }

        return false;
    } 


    void Guardar()
    {
        if(!Validar()){return;}

        if(tennisBLL.Guardar(this.tenni))
        {
            ShowNotification(
                new NotificationMessage
                {
                    Severity = NotificationSeverity.Success,
                    Summary = "Se ha guardado con exito."
                }
            );
            this.Nuevo();
        }
    }

    private void Buscar()
    {
        if (tenni.TenniId > 0)
        {
            var encontrado = tennisBLL.Buscar(tenni.TenniId);

            if (encontrado != null)
                this.tenni = encontrado;
        }
    }

    public void Eliminar()
    {
        if(tennisBLL.Eliminar(tenni.TenniId)){
            ShowNotification(
                new NotificationMessage
                {
                    Severity = NotificationSeverity.Info,
                    Summary = "Se ha eliminado con exito."
                }
            );
            Nuevo();
        }
        else{
            ShowNotification(
                new NotificationMessage
                {
                    Severity = NotificationSeverity.Error,
                    Summary = "No hay elemento para borrar."
                }
            );
            return;
        }
    }

    void ShowNotification(NotificationMessage message)
    {
        notificationService.Notify(message);
    }
}


